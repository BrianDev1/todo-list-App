
<%- include("header") -%>

    <div class="box" id="heading">
        <h1>It's <%= listTitle %>!</h1>
    </div>

    <div class="box">
        <% for (var i = 0; i < listOfItems.length ; i++) { %>
          <div class="item">
            <input type="checkbox">
            <p> <%= listOfItems[i].name %> </p>
          </div>
        <% } %>

        <form class="item" action="/" method="post">
          <input type="text" name="todoItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>

<%- include("footer") -%>
